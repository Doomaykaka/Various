@model KursWork.Models.Обслуживающий_персонал

@{
    ViewBag.Title = "Редактирование";
}

<h2>Редактирование</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Обслуживающий персонал</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.ФИО, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.ФИО, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.ФИО, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Должность, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Должность, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Должность, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Договор, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Договор, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Договор, "", new { @class = "text-danger" })
        </div>
    </div>

    @Html.HiddenFor(model => model.Паспорт_работника)

    <div class="form-group">
        @Html.LabelFor(model => model.Паспорт_работника, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Паспорт_работника, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Паспорт_работника, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
            @Html.LabelFor(model => model.ID_процесса_обработки, "ID_процесса_обработки", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("ID_процесса_обработки", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ID_процесса_обработки, "", new { @class = "text-danger" })
            </div>
        </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Сохранить" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("К списку", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
